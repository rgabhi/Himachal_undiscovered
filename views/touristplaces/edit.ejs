<%- include("../partials/header") %>

<div class="row justify-content-center">
    <div class=" col-md-12 text-center">
        <h1>Edit <%= touristplaces.name %></h1>
    </div>

    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="/touristplaces/<%= touristplaces._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" type="text" name="touristplaces[name]" value="<%= touristplaces.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="touristplaces[price]" value="<%= touristplaces.price %>"
                    min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" id="image" name="image" accept="image/*">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="touristplaces[description]"
                    value="<%= touristplaces.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
            </div>
        </form>
        <a href="/touristplaces">Go Back</a>
    </div>
</div>

<%- include("../partials/footer") %>