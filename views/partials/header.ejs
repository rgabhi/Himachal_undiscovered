<!DOCTYPE html>
<html lang="en">

<head>
  <title>Himachal Undiscoverd</title>
  <meta charset="UTF-8">
  <!-- Make site responsive on mobile/tablet -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css?family=PT+Sans:400,700" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/main.css">
  <!-- fontawesome -->
  <script src="https://kit.fontawesome.com/10a78188f9.js" crossorigin="anonymous"></script>
</head>

<body>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <% if (!currentUser) { %>
    <a class="navbar-brand" href="/">
      <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-house-fill navbar-brand" fill="currentColor"
        xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd"
          d="M8 3.293l6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293l6-6zm5-.793V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z" />
        <path fill-rule="evenodd"
          d="M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z" />
      </svg>
    </a>
    <% } else { %>
    <a class="navbar-brand" href="/touristplaces">
      <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-house-fill navbar-brand" fill="currentColor"
        xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd"
          d="M8 3.293l6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293l6-6zm5-.793V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z" />
        <path fill-rule="evenodd"
          d="M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z" />
      </svg>
    </a>
    <% } %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
      aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="navbar-nav ml-auto">
        <li class="px-2 nav-item <%= typeof page !== 'undefined' && page === 'touristplaces' ? 'active' : '' %>">
          <a href="/touristplaces" class="nav-link">Home</a>
        </li>
        <li id="about" class="px-2 nav-item <%= typeof page !== 'undefined' && page === 'about' ? 'active' : '' %>">
          <a class="nav-link" href="/about">About</a>
        </li>
        <li class="px-2 nav-item">
          <a class="nav-link" href="/touristplaces/new">New</a>
        </li>
      </ul>
      <ul class="navbar-nav ml-auto">
        <% if(!currentUser){ %>
        <li class="nav-item <%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>">
          <a href="/login" class="nav-link">Login</a>
        </li>
        <li class="nav-item <%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>">
          <a href="/register" class="nav-link">Sign
            Up</a>
        </li>
        <% } else { %>
        <li class="nav-item">
          <a href="#" class="nav-link">Signed In as <%= currentUser.username %></a>
        </li>
        <li class="nav-item">
          <a href="/logout" class="nav-link">Logout</a>
        </li>
        <% } %>
      </ul>
    </div>
  </nav>
  <div class="container text-center" id="flash-message">
    <% if(error && error.length >0){ %>
    <div class="alert alert-danger mt-md-1" role="alert">
      <%= error %>
    </div>
    <% }%>
    <% if(success && success.length >0){ %>
    <div class="alert alert-success mt-md-1" role="alert">
      <%= success %>
    </div>
    <% }%>
  </div>
  <!-- <div class="container-fluid p-0 mt-5"></div> -->